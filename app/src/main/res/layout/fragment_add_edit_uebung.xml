<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.home.AddEditUebungFragment">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:inputType="text"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:layout_below="@id/edit_text_title"
        />

    <TextView
        android:id="@+id/dummy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Priority:"
        android:layout_below="@+id/edit_text_description"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/number_picker_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@id/dummy1"
        />

    <TextView
        android:id="@+id/dummy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Anzahl der Wiederholungen:"
        android:layout_below="@id/number_picker_priority"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@id/dummy2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/counter"

        tools:listitem="@layout/fragment_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_add_fragment"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_below="@+id/recycler_view_fragment"
        android:layout_marginStart="-58dp"
        android:layout_marginTop="-73dp"
        android:layout_toEndOf="@+id/recycler_view_fragment"
        android:foregroundGravity="bottom"
        android:src="@drawable/ic_add" />

</RelativeLayout>